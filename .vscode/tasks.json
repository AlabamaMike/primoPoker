{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Server",
            "type": "shell",
            "command": "go",
            "args": ["build", "-o", "bin/server", "./cmd/server"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Run Server",
            "type": "shell",
            "command": "go",
            "args": ["run", "./cmd/server"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$go"],
            "isBackground": true
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "go",
            "args": ["test", "./tests/..."],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Run Tests with Coverage",
            "type": "shell",
            "command": "go",
            "args": ["test", "-cover", "./tests/..."],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Run Benchmarks",
            "type": "shell",
            "command": "go",
            "args": ["test", "-bench=.", "./tests/..."],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Format Code",
            "type": "shell",
            "command": "gofmt",
            "args": ["-w", "."],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Lint Code",
            "type": "shell",
            "command": "golangci-lint",
            "args": ["run"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Mod Download",
            "type": "shell",
            "command": "go",
            "args": ["mod", "download"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Mod Tidy",
            "type": "shell",
            "command": "go",
            "args": ["mod", "tidy"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "go",
            "args": ["clean"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
